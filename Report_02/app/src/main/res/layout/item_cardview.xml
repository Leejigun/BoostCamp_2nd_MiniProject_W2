<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cdvItem"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="3dp"
        card:cardCornerRadius="3dp"
        card:contentPadding="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgMain"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:scaleType="centerCrop"
                card:srcCompat="@drawable/algia" />

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/txtContents"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="TextView"
                    card:layout_constraintTop_toBottomOf="@+id/txtName"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="2dp"
                    card:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginStart="8dp" />

                <TextView
                    android:id="@+id/txtName"
                    android:layout_width="323dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:maxLines="1"
                    android:text="TextView"
                    android:textColor="@android:color/background_dark"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    card:layout_constraintLeft_toLeftOf="parent"
                    card:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/imgClick"
                    android:layout_width="31dp"
                    android:layout_height="29dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_weight="1"
                    card:srcCompat="@drawable/ic_click"
                    card:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="3dp"
                    card:layout_constraintRight_toRightOf="parent"
                    android:layout_marginEnd="8dp" />

            </android.support.constraint.ConstraintLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
